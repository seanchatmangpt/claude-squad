    "complete_example": {
      "model": "claude-sonnet-4-5-20250929",
      "cleanupPeriodDays": 60,
      "env": {
        "NODE_ENV": "development",
        "API_BASE_URL": "https://api.internal.company.com",
        "LOG_LEVEL": "info"
      },
      "permissions": {
        "allow": [
          "Bash(npm run:*)",
          "Bash(yarn:*)",
          "Read(~/.config/**)",
          "Grep",
          "Glob",
          "Read(./src/**)",
          "Read(./tests/**)"
        ],
        "ask": [
          "Bash(git push:*)",
          "Bash(git commit:*)",
          "WebFetch",
          "Write(./src/**)",
          "Edit(./src/**)"
        ],
        "deny": [
          "Read(./.env)",
          "Read(./.env.*)",
          "Read(./secrets/**)",
          "Bash(rm -rf:*)",
          "Write(/etc/**)",
          "Write(/usr/**)"
        ],
        "additionalDirectories": [
          "../shared-utils/",
          "~/company-config/"
        ],
        "defaultMode": "acceptEdits"
